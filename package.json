{
  "name": "amethyst-launcher",
  "version": "2.4.4",
  "main": "public/electron.js",
  "author": "FrederoxDev, Adrian8115",
  "description": "Amethyst Launcher",
  "dependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "electron-updater": "^6.2.1",
    "eslint-config-react-app": "^7.0.1",
    "jszip": "^3.10.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.23.1",
    "regedit-rs": "^1.0.2",
    "sudo-prompt": "^9.2.1",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "start-react": "react-app-rewired start",
    "start-electron": "electron .",
    "build-react": "react-app-rewired build",
    "build": "react-app-rewired build && electron-builder --win",
    "run-built": "start ./dist/win-unpacked/Amethyst-Launcher.exe",
    "eject": "react-scripts eject",
    "bump-version": "npm version patch --no-git-tag-version"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "devDependencies": {
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "react-app-rewired": "^2.2.1",
    "react-scripts": "^5.0.1"
  },
  "build": {
    "productName": "Amethyst-Launcher",
    "appId": "com.frederoxdev.amethystlauncher",
    "directories": {
      "output": "dist",
      "buildResources": "public"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-${version}.exe"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "FrederoxDev",
        "repo": "Amethyst-Launcher"
      }
    ],
    "fileAssociations": [
      {
        "ext": [
          ".amethyst"
        ],
        "name": "Amethyst Mod",
        "role": "Editor"
      }
    ]
  },
  "browserslist": {
    "production": [
      "electron >= 28.1.3"
    ],
    "development": [
      "electron >= 28.1.3"
    ]
  },
  "homepage": "./"
}
